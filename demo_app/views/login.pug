extend layout.pug 
block content
    div(class='container login-container')
        div(class='row justify-content-center align-items-center')
            div(id='login-column' class='col-md-6')     
                div(id='login-box' class='col-md-12')
                    form(id='login-form' class='form' method='POST' action='/login')
                        h3(class='text-center text-info') Login Demo App
                        div(class='form-floating mb-3')
                            input(class='form-control' type='text' id='username' name='username' placeholder='name@example.com') 
                            label(class='form-label' for='username') Username
                        div(class='form-floating mb-3')        
                            input(class='form-control' type='password' id='password' name='password' placeholder='Password') 
                            label(class='form-label' for='password') Password
                        div(class='d-grid gap-2')
                            input(class='btn-lg btn-primary' type='submit' value='Login')
                        div(class='text-right')
                            a(href="/register" class='text-info') Register here
                        if error
                            div(class='alert alert-danger alert-dismissible fade show' role='alert')
                                p #{error.msg}
                                button(type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close")
